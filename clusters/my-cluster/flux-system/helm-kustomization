
apiVersion: source.toolkit.fluxcd.io/v1
kind: GitRepository
metadata:
  name: helm-source
  namespace: flux-system
spec:
  interval: 1m0s
  ref:
    branch: master
  secretRef:
    name: flux-system
  url: https://github.com/venkallex/flux2.git
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: helm-kustomization
  namespace: flux-system
spec:
  interval: 1m0s
  path: "./flux-chart"
  prune: false
  sourceRef:
    kind: GitRepository
    name: helm-source
---

