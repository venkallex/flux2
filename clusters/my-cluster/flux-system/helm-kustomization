apiVersion: kustomize.toolkit.fluxcd.io/v1beta1
kind: Kustomization
metadata:
  name: helm-kustomization
  namespace: flux-system
spec:
  interval: 1m0s
  path: "./flux-chart"
  prune: false
  sourceRef:
    kind: GitRepository
    name: flux-system
----
apiVersion: source.toolkit.fluxcd.io/v1beta1
kind: GitRepository
metadata:
  name: helm-source
  namespace: flux-system
spec:
  interval: 10m
  url: https://github.com/venkallex/flux2
  ref:
    branch: master
----
